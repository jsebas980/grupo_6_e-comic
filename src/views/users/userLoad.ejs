<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partials/head.ejs') %>

  <body class="product_edit">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>
      <form action="/users/userLoad" method="POST" enctype="multipart/form-data">
        <div class="imgcontainer">
          <h1>Load</h1>
        </div>

        <div class="container">
          <label for="id"><b>Identificador</b></label>
          <input type="text" placeholder="ingrese el código del comic" name="id" required>
          <label for="firstname"><b>Nombre</b></label>
          <input type="text" placeholder="ingrese el título del comic" name="firstname" required>
          <label for="lastname"><b>Apellidos</b></label>
          <input type="text" placeholder="ingrese la temporada del comic" name="lastname" required>
          <label for="gender"><b>Genero</b></label>
          <input type="text" placeholder="ingrese el volumen del comic" name="gender" required>
          <label for="email"><b>Correo electronico</b></label>
          <input type="text" placeholder="ingrese el precio del comic" name="email" required>
          <label for="phonenumber"><b>Teléfono / Celular</b></label>
          <input type="text" placeholder="ingrese un breve texto del comic" name="phonenumber" required>
          <label for="city"><b>Ciudad</b></label>
          <input type="text" placeholder="ingrese el texto del comic" name="city" required>
          <label for="category"><b>Autor</b></label>
          <input type="text" placeholder="ingrese el autor del comic" name="category" required>
          <br/> <br/>
          <label for="img"><b>Imagen</b></label>
          <input type="file" name="img" required>
        </div>

        <div class="container2">
          <button type="submit" class="registerbtn">Guardar</button>
        </div>
      </form>
      </main>
      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>
  </body>

</html>