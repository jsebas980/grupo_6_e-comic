      <label for="psw-repeat"><b>Contraseña</b></label>
      <input type="password" placeholder="Enter password repeat" name="psw-repeat" id="psw-repeat" required>
      <label for="dt"><b>Fecha de nacimiento</b></label>
      <input type="date" placeholder="Enter date" name="dt" required>
