<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partials/head.ejs') %>
  <body class="product_edit">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>
    <main class="main">
      <form action="/users/userInsertCRUD" method="POST" enctype="multipart/form-data">
        <div class="imgcontainer">
          <h1>Creación de un usuario en e<span>C</span>omic</h1>
        </div>
        <% if(typeof alert !='undefined' ) { %>
          <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">×</span>
                </button>
            </div>
            <% }) %>
              <% } %>
                <fieldset id="left">
                  <label for="firstname"><b>Nombre</b></label>
                  <input type="text" placeholder="Ingrese el nombre" name="nombre" value="<%= locals.oldData ? oldData.nombre : null %>">
                  <label for="lastname"><b>Apellidos</b></label>
                  <input type="text" placeholder="Ingrese los apellidos" name="apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
                </fieldset>
                <fieldset id="right">
                  <label for="email"><b>Correo electrónico</b></label>
                  <input type="text" placeholder="Ingrese el correo electronico" name="correoelectronico" value="<%= locals.oldData ? oldData.correoelectronico : null %>">
                  <label for="phonenumber"><b>Teléfono / Celular</b></label>
                  <input type="text" placeholder="Ingrese el teléfono o celular" name="numerotelefono" value="<%= locals.oldData ? oldData.numerotelefono : null %>">
                  <label for="city"><b>País</b></label>
                  <!-- <input type="text" placeholder="Ingrese el pais" name="id_pais" value=""> -->
                  <select name="id_pais" placeholder="Ingrese el ciudad/provincia">
                    <option disabled selected value> -- select an option -- </option>
                    <% if(typeof promPais !='undefined' ) { %>
                      <% promPais.forEach(function(pais) { %>
                        <option value="<%= pais.id %>">
                          <%= pais.nombre %>
                        </option>
                        <% }) %>
                          <% } %>
                  </select>
                  <label for="city"><b>Ciudad / Provincia</b></label>
                  <!-- <input type="text" placeholder="Ingrese el ciudad/provincia" name="id_provincia" value=""> -->
                  <select name="id_provincia" placeholder="Ingrese el ciudad/provincia">
                    <option disabled selected value> -- select an option -- </option>
                    <% if(typeof promProvincia !='undefined' ) { %>
                      <% promProvincia.forEach(function(prov) { %>
                        <option value="<%= prov.id %>">
                          <%= prov.nombre %>
                        </option>
                        <% }) %>
                          <% } %>
                  </select>
                  <label for="password"><b>Contraseña</b></label>
                  <input type="password" placeholder="Ingrese la contraseña" name="contrasena">
                </fieldset>
                <fieldset id="center">
                  <label><b>Imagen</b></label>
                  <input type="file" name="imagenuser">
                </fieldset>
                </div>
                <div class="container2">
                  <button type="submit" class="button">Guardar usuario</button>
                </div>
      </form>
      </main>
      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>
  </body>
</html>