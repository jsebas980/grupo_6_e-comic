<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partials/head.ejs') %>

  <body class="product_detail">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>
      <main class="main">
        <div class="box">
          <div class="container-1">
            <span class="icon"><i class="fa fa-search fa-2x"></i></span>
            <input type="search" id="search" placeholder="Search..." />
          </div>
        </div>

        <div class="card-wrapper">
          <div class="card-dtls">
            <!-- card left -->
            <div class="product-imgs">
              <div class="img-display">
                <div class="img-showcase">
                  <img src="/images/img/<%= producto.img %>" alt="shoe image">
                </div>
              </div>
            </div>
            <!-- card right -->
            <div class="product-content">
              <div class="card-header-title">
                <h2 class="product-title">
                  <%= producto.titulo %>
                </h2>
              </div>

              <div class="product-price">
                <p class="last-price">Precio normal: <span>$<%= producto.precioNormal %></span></p>
                <p class="new-price">Precio con descuento: <span>$<%= producto.precioNormal-producto.precioNormal*0.05
                      %> (5%)</span></p>
              </div>

              <div class="product-detail">
                <h2>Acerca del comic: </h2>
                <p>
                  <%= producto.descripcionDetallada %>
                </p>
                <ul>
                  <li>Autor: <span>
                      <%= producto.autor %>
                    </span></li>
                  <li>Ilustrador: <span>
                      <%= producto.illustrador %>
                    </span></li>
                  <li>Categoría: <span>
                      <%= producto.categoria %>
                    </span></li>
                  <li>Publicación: <span>
                      <%= producto.publicacion %>
                    </span></li>
                  <li>País origen: <span>
                      <%= producto.paisOrigen %>
                    </span></li>
                    <li>Identificador: <span>
                      <%= producto.id %>
                    </span></li>
                </ul>
              </div>
              <div class="edit-delete" action="">
                <div class="ml-auto"><a href="/products/productEdit/<%= producto.id %>" class="text-uppercase">Editar</a></div>
                <div class="ml-auto"><a href="/products/productDelete/<%= producto.id %>" class="text-uppercase">Borrar </a></div>
            </div>
              <div class="purchase-info">
                <input type="number" min="0" value="1">
                <button type="button" class="btn"><i class="fa-solid fa-cart-plus"></i> Añadir al carrito</button>
              </div>
            </div>
          </div>
        </div>


        <script src="static/dist/script.js"></script>
      </main>
      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>
  </body>

</html>