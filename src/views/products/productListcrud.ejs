<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partials/head.ejs') %>

  <body class="product_detail">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

      <main class="main">
        <div class="box">
          <div class="container-1">
            <span class="icon"><i class="fa fa-search fa-2x"></i></span>
            <input type="search" id="search" placeholder="Search..." />
          </div>
        </div>

        <div>
          <h2 class="Listardoh2">Listado de productos</h2>
          <table class="fl-table">
            <thead>
              <tr>
                <th>id</th>
                <th>titulo</th>
                <th>temporada</th>
                <th>volumen</th>
                <th>descripcionCorta</th>
                <th>descripciondetallada</th>
                <th>precionormal</th>
                <th>publicacion</th>
                <th>precio</th>
                <th>descontinuado</th>
                <th>stock</th>
                <th>id_categoria</th>
                <th>id_pais</th>
                <th>imagen</th>
              </tr>
            </thead>
            <tbody>
              <% productoCrud.forEach(function(product){ %>
                <tr>
                  <td>
                    <%= product.id %>
                  </td>
                  <td>
                    <%= product.titulo %>
                  </td>
                  <td>
                    <%= product.temporada %>
                  </td>
                  <td>
                    <%= product.volumen %>
                  </td>
                  <td>
                    <%= product.descripcioncorta %>
                  </td>
                  <td>
                    <%= product.descripciondetallada %>
                  </td>
                  <td>
                    <%= product.precionormal %>
                  </td>
                  <td>
                    <%= product.publicacion %>
                  </td>
                  <td>
                    <%= product.precio %>
                  </td>
                  <td>
                    <%= product.descontinuado %>
                  </td>
                  <td>
                    <%= product.stock %>
                  </td>
                  <td>
                    <%= product.id_categoria %>
                  </td>
                  <td>
                    <%= product.id_pais %>
                  </td>
                  <td>
                    <%= product.imagen %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </main>

      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>
  </body>

</html>