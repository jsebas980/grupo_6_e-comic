<header class="header-login-signup">
  <section>
    <div class="header-limiter">
      <% if (locals.isLogged){ %>
      <div class="has-outline">
        <img
          src="<%= locals.userLogged.imagen %>"
          alt="eComic"
          href="/"
          class="code-img"
        />
      </div>
      <% } else { %>
      <div class="has-outline">
        <img
          src="/images/Logo_eComic_active.png"
          alt="eComic"
          href="/"
          class="code-img"
        />
      </div>
      <% }%>
      <h1><a href="/">e<span>C</span>omic</a></h1>
      <!-- <% if (locals.isLogged){ %>        
      <h1><%= locals.userLogged.firstname %></h1>
      <% } %> -->
      <div class="menudiv">
        <label for="toggle-1" class="toggle-menu">
          <i class="fa-solid fa-bars fa-4x"></i>
        </label>
        <input type="checkbox" id="toggle-1" />
        <nav>
          <ul>
            <li class="selected">
              <a href="/"><i class="fa fa-home fa-2xl"></i></a>
            </li>
            <% if (locals.isLogged){ %>
            <li><a href="/products/productCreateCRUD">Crear producto</a></li>
            <li><a href="/products/productListCRUD">Listado producto</a></li>
            <li><a href="/users/userCreateCRUD">Crear usuario</a></li>
            <li><a href="/users/userListCRUD">Listado usuario</a></li>
            <% } %>
          </ul>
        </nav>
        <ul class="leftdiv">
          <li>
            <a href="/products/productCart" alt="Carrito"
              ><i class="fa-solid fa-cart-shopping fa-2xl"></i
            ></a>
          </li>
          <% if (!locals.isLogged){ %>
          <li>
            <a href="/users/login" alt="Login" class="login"
              ><i class="fa-solid fa-user fa-xl"></i> Login</a
            >
          </li>
          <% } else { %>
          <li>
            <a href="/users/logout" alt="Logout" class="login"
              ><i class="fa-solid fa-user fa-xl"></i> Logout</a
            >
          </li>
          <% }%>
        </ul>
      </div>
    </div>
  </section>
</header>
